@model IEnumerable<EmployeeReport.Models.Employee>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col">
            <h2 class="text-primary text-center">Employee List</h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Employee Name</th>
                    <th>Email</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                    <tr>
                        <td width="10%">
                            <div class="row justify-content-center">
                                <img src="~/images/@employee.ProfilePicture" alt="Alternate Text" style="width: 70px;" class="img-fluid" />
                            </div>
                        </td>
                        <td width="20%" class="lead">@employee.Name</td>
                        <td width="20%" class="lead">@employee.Email</td>
                        <td width="20%" class="lead">@employee.Country</td>
                        <td width="20%">
                            <div class="d-flex justify-content-between btn-group">
                                <a asp-action="ViewEmployee" asp-controller="Employee" asp-route-Id="@employee.Id" class="btn btn-outline-primary">View</a>
                                <button class="btn btn-dark">Print</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

