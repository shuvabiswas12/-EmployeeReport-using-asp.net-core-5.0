
@model EmployeeReport.Models.Employee

<div class="container">
    <div class="row justify-content-between my-2">
        <button onclick="history.go(-1)" class="btn btn-outline-primary">&larr; Back</button>
        <div class="row">
            <a href="" class="btn btn-light">Edit Info</a>
            <a href="" class="btn btn-success">Print</a>
            <form method="post" asp-action="Delete" asp-controller="Employee">
                <input asp-for="@Model.Id" hidden/>
                <button class="btn btn-outline-danger">Delete</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="my-2 pt-2 px-2 pb-1 d-flex bg-light">
                <div class="col">
                    <img src="~/images/@Model.ProfilePicture" alt="Alternate Text" class="img-fluid" />
                </div>
                <div class="col-8">
                    <div class="mb-2">
                        <h6>Name</h6>
                        <p class="lead itemFontSize">@Model.Name</p>
                    </div>
                    <div class="my-2">
                        <h6>Gender</h6>
                        <p class="lead itemFontSize">@Model.Gender</p>
                    </div>
                </div>

            </div>
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>Email</h6>
                <p class="lead itemFontSize">@Model.Email</p>
            </div>
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>Phone</h6>
                <p class="lead itemFontSize">@Model.Phone</p>
            </div>
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>Salary</h6>
                <p class="lead itemFontSize">@Model.Salary</p>
            </div>
        </div>

        <div class="col">
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>NID</h6>
                <p class="lead itemFontSize">@Model.NID</p>
            </div>
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>Country</h6>
                <p class="lead itemFontSize">@Model.Country</p>
            </div>
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>Company</h6>
                <p class="lead itemFontSize">@Model.CompanyName</p>
            </div>
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>Joining Date</h6>
                <p class="lead itemFontSize">@Model.JoiningDate</p>
            </div>
            <div class="my-2 pt-2 px-2 bg-light">
                <h6>Mailing Address</h6>
                <p class="lead itemFontSize">@Model.MailingAddress</p>
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Education</td>
                    <td>Institute</td>
                    <td>Passing Year</td>
                    <td>Board / Faculty</td>
                    <td>Grade</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="width: 10%">
                        <p class="lead itemFontSize">SSC</p>
                    </td>
                    <td>
                        <p class="lead itemFontSize">@Model.SchoolName</p>
                    </td>
                    <td style="width: 12%">
                        <p class="lead itemFontSize">@Model.SscPassingYear</p>
                    </td>
                    <td>
                        <p class="lead itemFontSize">@Model.SscBoard</p>
                    </td>
                    <td style="width: 12%">
                        <div class="row">
                            <p class="lead itemFontSize pl-2">@Model.SscGrade</p>
                            &nbsp;
                            /
                            &nbsp;
                            <p class="lead itemFontSize">5.00</p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 10%">
                        <p class="lead itemFontSize">HSC</p>
                    </td>
                    <td>
                        <p class="lead itemFontSize">@Model.CollegeName</p>
                    </td>
                    <td style="width: 12%">
                        <p class="lead itemFontSize">@Model.HscPassingYear</p>
                    </td>
                    <td>
                        <p class="lead itemFontSize">@Model.HscBoard</p>
                    </td>
                    <td style="width: 12%">
                        <div class="row">
                            <p class="lead itemFontSize pl-2">@Model.HscGrade</p>
                            &nbsp;
                            /
                            &nbsp;
                            <p class="lead itemFontSize">5.00</p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 10%">
                        <p class="lead itemFontSize">BSC</p>
                    </td>
                    <td>
                        <p class="lead itemFontSize">@Model.UniversityName</p>
                    </td>
                    <td style="width: 12%">
                        <p class="lead itemFontSize">@Model.GraduationYear</p>
                    </td>
                    <td>
                        <p class="lead itemFontSize">@Model.FacultyName</p>
                    </td>
                    <td style="width: 12%">
                        <div class="row">
                            <p class="lead itemFontSize pl-2">@Model.BechelorGrade</p>
                            &nbsp;
                            /
                            &nbsp;
                            <p class="lead itemFontSize">4.00</p>
                        </div>
                    </td>
                </tr>
                
            </tbody>
        </table>
    </div>
</div>
